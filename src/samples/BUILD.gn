import("../../build_overrides/gpgmm_overrides_with_defaults.gni")

import("${gpgmm_root_dir}/build_overrides/gpgmm_features.gni")

group("samples") {
  deps = []
  if (gpgmm_enable_d3d12) {
    deps = [
      ":D3D12Sample",
      ":D3D12SampleMin",
    ]
  }
}

executable("D3D12Sample") {
  deps = [ "${gpgmm_root_dir}:gpgmm" ]
  sources = [ "D3D12Sample.cpp" ]
  libs = [
    "d3d12.lib",
    "dxgi.lib",
  ]
}

source_set("min_gpgmm") {
  sources = [
    "${gpgmm_root_dir}/src/include/min/gpgmm.cpp",
    "${gpgmm_root_dir}/src/include/min/gpgmm.h",
    "${gpgmm_root_dir}/src/include/min/gpgmm_d3d12.cpp",
    "${gpgmm_root_dir}/src/include/min/gpgmm_d3d12.h",
  ]
}

executable("D3D12SampleMin") {
  deps = [ ":min_gpgmm" ]
  defines = [ "GPGMM_D3D12_HEADERS_ALREADY_INCLUDED" ]
  sources = [ "D3D12Sample.cpp" ]
  include_dirs = [ "${gpgmm_root_dir}/src/include/min" ]
  libs = [
    "d3d12.lib",
    "dxgi.lib",
  ]
}
